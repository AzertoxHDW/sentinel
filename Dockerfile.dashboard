FROM golang:1.25.4-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache gcc musl-dev git

# Copy everything
COPY . .

# Build dashboard backend (fix the command)
RUN CGO_ENABLED=1 GOOS=linux go build -o sentinel-dashboard ./dashboard/backend

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /app/sentinel-dashboard .

# Expose API port
EXPOSE 8080

ENTRYPOINT ["./sentinel-dashboard"]