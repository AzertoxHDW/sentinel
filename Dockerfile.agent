FROM golang:1.21-alpine AS builder

WORKDIR /app

# Install build dependencies
RUN apk add --no-cache gcc musl-dev git

# Copy everything
COPY . .

# Build agent
RUN cd agent && CGO_ENABLED=1 GOOS=linux go build -o ../sentinel-agent .

FROM alpine:latest

RUN apk --no-cache add ca-certificates

WORKDIR /app

COPY --from=builder /app/sentinel-agent .

# Expose agent port
EXPOSE 9100

CMD ["./sentinel-agent"]